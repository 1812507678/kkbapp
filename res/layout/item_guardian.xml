<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="8.0dip" >

    <com.ttxgps.gpslocation.view.CircleImageView
        android:id="@+id/head_icon_iv"
        android:layout_width="80.0dip"
        android:layout_height="80.0dip"
        android:src="@drawable/home_icon_head" />

    <RelativeLayout
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_marginLeft="15.0dip"
        android:layout_weight="1.0"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/relation_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearanceHomeBussTitle"
            android:textSize="16.0sp" />

        <TextView
            android:id="@+id/text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relation_tv"
            android:text="@string/main_account"
            android:textAppearance="@style/TextAppearanceVersonCode"
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/account_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relation_tv"
            android:layout_toRightOf="@id/text_tv"
            android:textAppearance="@style/TextAppearanceVersonCode"
            android:textSize="14.0sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/mark_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5.0dip" />

</LinearLayout>