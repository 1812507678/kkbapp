<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/part_bar"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@drawable/menu_bar" >

    <View
        android:id="@+id/move"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/xuanzhong" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/menu_track"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="things"
            android:scaleType="fitCenter"
            android:src="@drawable/menu_track" />

        <ImageView
            android:id="@+id/menu_replay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="things"
            android:scaleType="fitCenter"
            android:src="@drawable/menu_replay" />

        <ImageView
            android:id="@+id/menu_monitor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="things"
            android:scaleType="fitCenter"
            android:src="@drawable/menu_monitor" />

        <ImageView
            android:id="@+id/menu_options"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="things"
            android:scaleType="fitCenter"
            android:src="@drawable/menu_options" />
    </LinearLayout>

</RelativeLayout>