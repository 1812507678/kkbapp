<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/layout_bg_color"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:text="@string/current_pwd"
            android:textColor="#ff1a1a1a"
            android:textSize="15.0dip" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/layout_width"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip" >

            <EditText
                android:id="@+id/input_pwd_current"
                style="@style/editorStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:clickable="true"
                android:hint="@string/input_current_pwd"
                android:paddingRight="30.0dip"
                android:password="true"
                android:singleLine="true" />

            <Button
                android:id="@+id/pwd_current_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/more_del_s"
                android:visibility="invisible" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="15.0dip"
            android:text="@string/new_pwd"
            android:textColor="#ff1a1a1a"
            android:textSize="15.0sp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/layout_width"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip" >

            <EditText
                android:id="@+id/pwd_new"
                style="@style/editorStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:clickable="true"
                android:hint="@string/input_new_pwd"
                android:paddingRight="30.0dip"
                android:password="true"
                android:singleLine="true" />

            <Button
                android:id="@+id/pwd_new_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/more_del_s"
                android:visibility="invisible" />
        </RelativeLayout>

        <CheckBox
            android:id="@+id/pwd_show_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="10.0dip"
            android:button="@drawable/login_check_btn_s"
            android:paddingLeft="25.0dip"
            android:text="@string/show_pwd"
            android:textColor="#ff1a1a1a"
            android:textSize="15.0sp" />

        <Button
            android:id="@+id/pwd_save"
            style="@style/submit_button_style"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="20.0dip"
            android:text="@string/save"
            android:textAppearance="@style/TextAppearanceBtnContext"
            android:textColor="@drawable/share_color_white_white_s" />
    </LinearLayout>

</LinearLayout>