<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_weight="2"
    	android:background="#028AFF">
        
        <ImageView 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:src="@drawable/bg_circle"
    		android:layout_marginTop="30dp"
    		android:layout_centerHorizontal="true"/>
        <ImageView 
            android:layout_width="80dp"
    		android:layout_height="80dp"
    		android:src="@drawable/home_title_img"
    		android:layout_marginTop="40dp"
    		android:layout_centerHorizontal="true"
    		/>
        <TextView 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="儿童智能书包"
    		android:textColor="#FFFFFF"
    		android:textSize="12sp"
    		android:layout_marginTop="150dp"
    		android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_weight="3"
    	android:background="#FFFFFF">
       <LinearLayout 
       		android:id="@+id/ll_imagegroup"
            android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:layout_marginTop="30dp"
    		android:layout_marginLeft="40dp"
    		android:layout_marginRight="40dp"
    		android:orientation="horizontal">
    		<RelativeLayout 
    		    android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="wrap_content">
    		    <ImageView
    		        android:id="@+id/iv_circlebg"
		            android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:layout_centerHorizontal="true"
		    		android:src="@drawable/bg_circle_loaction"/>
    		    <ImageView
		            android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:src="@drawable/bg_car_icon"
		    		android:layout_marginTop="10dp"
		    		android:layout_centerHorizontal="true"/>
    		    <TextView 
    		        android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:text="智能定位"
		    		android:textColor="#000000"
		    		android:layout_below="@id/iv_circlebg"
		    		android:layout_marginTop="10dp"
		    		android:layout_centerHorizontal="true"/>
    		</RelativeLayout>
    		<RelativeLayout 
    		    android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="wrap_content">
    		    <ImageView
    		        android:id="@+id/iv_circlebg2"
		            android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:layout_centerHorizontal="true"
		    		android:src="@drawable/bg_circle_listen"/>
    		    <ImageView
		            android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:src="@drawable/bg_car_icon"
		    		android:layout_marginTop="10dp"
		    		android:layout_centerHorizontal="true"/>
    		    <TextView 
    		        android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:text="监听"
		    		android:textColor="#000000"
		    		android:layout_below="@id/iv_circlebg2"
		    		android:layout_marginTop="10dp"
		    		android:layout_centerHorizontal="true"/>
    		</RelativeLayout>
    		<RelativeLayout 
    		    android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="wrap_content">
    		    <ImageView
    		        android:id="@+id/iv_circlebg3"
		            android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:layout_centerHorizontal="true"
		    		android:src="@drawable/bg_circle_paln"/>
    		    <ImageView
		            android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:src="@drawable/bg_car_icon"
		    		android:layout_marginTop="10dp"
		    		android:layout_centerHorizontal="true"/>
    		    <TextView 
    		        android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:text="健康记步"
		    		android:textColor="#000000"
		    		android:layout_below="@id/iv_circlebg3"
		    		android:layout_marginTop="10dp"
		    		android:layout_centerHorizontal="true"/>
    		</RelativeLayout>
    		
        </LinearLayout>
        <LinearLayout 
             android:layout_width="match_parent"
		     android:layout_height="match_parent"
		     android:layout_below="@id/ll_imagegroup"
		     android:layout_marginTop="60dp"
		     android:orientation="horizontal"
		     android:layout_marginLeft="30dp"
		     android:layout_marginRight="30dp">
    		<Button 
    		    android:layout_width="0dp"
    		    android:layout_weight="1"
		     	android:layout_height="40dp"
		     	android:text="上一步"
		     	android:textColor="#FFFFFF"
		     	android:background="@drawable/btn_login_s"
    			android:onClick="preStep"/>
    		<Button 
    		    android:layout_width="0dp"
    		    android:layout_weight="1"
		     	android:layout_height="40dp"
		     	android:text="下一步"
		     	android:textColor="#FFFFFF"
		     	android:background="@drawable/btn_login_s"
		     	android:layout_marginLeft="40dp"
		     	android:onClick="nextStep"/>
            
        </LinearLayout>  
    </RelativeLayout>

</LinearLayout>
