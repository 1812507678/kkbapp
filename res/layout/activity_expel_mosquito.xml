<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/layout_bg_color"
    android:orientation="vertical" >

    <include layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10.0dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cur_device_q"
            android:visibility="gone"
            android:textAppearance="@style/TextAppearanceHomeSet1Lager" />

        <TextView
            android:id="@+id/power_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearanceHomeSet1Lager" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/expel_mosq_txt"
            android:textAppearance="@style/TextAppearanceHomeSet1Lager" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearanceHomeSet1Lager" />

        <RadioGroup
            android:id="@+id/expel_switch_rg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/on_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/expel_check_btn"
                android:paddingBottom="5.0dip"
                android:paddingTop="5.0dip"
                android:text="@string/on"
                android:textColor="@android:color/background_dark" />

            <RadioButton
                android:id="@+id/off_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30.0dip"
                android:button="@drawable/expel_check_btn"
                android:paddingBottom="5.0dip"
                android:paddingTop="5.0dip"
                android:text="@string/off"
                android:textColor="@android:color/background_dark" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="20.0dip"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="驱蚊开启后，20分钟后将自动关闭!"
        	android:textSize="15sp"
        	android:textColor="@android:color/background_dark"
            android:textAppearance="@style/TextAppearanceHomeSet1Lager"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/use_duration_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:background="@drawable/expel_bottom_bg"
            android:gravity="center"
            android:padding="5.0dip"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3.0dip"
                android:text="@string/device_use_time"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/use_duration_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3.0dip"
                android:text="@string/unknow_duration"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@id/confir_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10.0dip"
        android:layout_marginTop="20.0dip"
        android:background="@drawable/btn_icon2_s"
        android:text="@string/ok"
        android:textAppearance="@style/TextAppearanceTitleLager"
        android:textColor="@drawable/share_color_white_white_s" />

</LinearLayout>