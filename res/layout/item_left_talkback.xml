<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/layout_bg_color"
    android:orientation="vertical"
    android:paddingBottom="5.0dip"
    android:paddingLeft="10.0dip"
    android:paddingRight="10.0dip"
    android:paddingTop="5.0dip" >

    <TextView
        android:id="@+id/item_chatfrom_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/talkback_time"
        android:maxLength="19"
        android:padding="5.0dip"
        android:textAppearance="@style/TextAppearanceHomeSet1Lager"
        android:textColor="@color/assict_text_color" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:orientation="horizontal" >

        <com.ttxgps.gpslocation.CircleImageView
            android:id="@+id/item_chatfrom_head_iv"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:id="@+id/item_chatfrom_message_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="3.0dip"
            android:background="@drawable/chatfrom_bg_normal"
            android:gravity="center_vertical" >

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/item_chatfrom_voice_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chatfrom_voice_playing_f3"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/item_chatfrom_voice_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </FrameLayout>

            <TextView
                android:id="@+id/item_chatfrom_text_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="10"
                android:singleLine="true"
                android:text="111111"
                android:visibility="invisible" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_chatfrom_duration_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10.0dip"
            android:text="6&quot;"
            android:textSize="16.0sp" />

        <ImageView
            android:id="@+id/item_chatfrom_new_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10.0dip"
            android:src="@drawable/icon_has_new" />
    </LinearLayout>

</LinearLayout>