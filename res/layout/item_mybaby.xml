<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >


    <LinearLayout
        android:id="@+id/id_front"
        android:layout_width="fill_parent"
        android:layout_height="100dip"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8.0dip"
        android:visibility="visible" >

        <com.ttxgps.gpslocation.CircleImageView
            android:id="@id/head_icon_iv"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip" />

        <RelativeLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.0"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/relation_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearanceHomeBussTitle"
                android:textSize="18.0sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/role_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dip"
                android:layout_toRightOf="@id/relation_tv"
                android:textAppearance="@style/TextAppearanceHomeBussTitle"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/text1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/relation_tv"
                android:text="@string/watch_num"
                android:textAppearance="@style/TextAppearanceHomeBussTitle"
                android:textSize="15.0sp" />

            <TextView
                android:id="@id/imei_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text1_tv"
                android:textAppearance="@style/TextAppearanceHomeBussTitle"
                android:textSize="15.0sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/text1_tv"
                android:layout_toRightOf="@+id/text1_tv"
                android:text="ï¼š"
                android:textAppearance="@style/TextAppearanceHomeBussTitle"
                android:textSize="15.0sp" />

            <TextView
                android:id="@+id/text2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text1_tv"
                android:text="@string/device_type"
                android:textAppearance="@style/TextAppearanceHomeBussTitle"
                android:textSize="15.0sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/device_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text1_tv"
                android:layout_toRightOf="@+id/text2_tv"
                android:textAppearance="@style/TextAppearanceHomeBussTitle"
                android:textSize="15.0sp"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@id/mark_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/white" />
    </LinearLayout>

</FrameLayout>