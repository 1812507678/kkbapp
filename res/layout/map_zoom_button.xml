<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <ImageButton
        android:id="@+id/device_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/location_bt"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10.0dip"
        android:layout_marginLeft="10.0dip"
        android:background="#ffffffff"
        android:onClick="things"
        android:src="@drawable/btn_map_device_s" />

    <ImageButton
        android:id="@+id/location_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10.0dip"
        android:layout_marginLeft="10.0dip"
        android:background="#ffffffff"
        android:onClick="things"
        android:src="@drawable/btn_map_loc_s" />

    <CheckBox
        android:id="@+id/traffic_cbx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="20.0dip"
        android:visibility="invisible"
        android:background="@drawable/btn_traffic_s"
        android:button="@null" />

    <LinearLayout
        android:id="@+id/zoom_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10.0dip"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible" >

        <ImageButton
            android:id="@+id/zoomin_ib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffffff"
            android:onClick="things"
            android:src="@drawable/btn_map_zoom_out" />

        <ImageButton
            android:id="@+id/zoomout_ib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffffff"
            android:onClick="things"
            android:src="@drawable/btn_map_zoom_in" />
    </LinearLayout>


</RelativeLayout>