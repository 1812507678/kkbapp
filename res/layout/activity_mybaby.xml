<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipe="http://schemas.android.com/apk/res/com.hy.hywatch"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_m_layout" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/layout_title" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/id_nodata"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="@string/no_have_device"
                android:textColor="#ff999999"
                android:textSize="20.0sp"
                android:visibility="gone" />

            <ListView
                android:id="@+id/id_listview"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0"
                android:divider="@null"
                android:dividerHeight="10.0dip"
                />

            <include layout="@layout/footer_guardian" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>