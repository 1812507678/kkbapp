<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:paddingRight="20dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/One_month_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/main_color"
                android:textSize="16sp"
                android:text="20元"
                 />

            <TextView
                android:id="@+id/Three_months_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/main_color"
                android:textSize="16sp"
                android:text="20元"
                />
            <TextView
                android:id="@+id/Six_months_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/main_color"
                android:textSize="16sp"
                android:text="20元"
                 />
            <TextView
                android:id="@+id/A_year_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/main_color"
                android:textSize="16sp"
                android:text="20元"
                />
            <TextView
                android:id="@+id/forever_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/main_color"
                android:textSize="16sp"
                android:text="20元"
                />

        </LinearLayout>

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/home_icon_line2"
            android:showDividers="middle" >

            <RadioButton
                android:id="@+id/One_month_radio"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:checked="true"
                android:button="@drawable/check_pay_type"
                android:paddingLeft="17dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/main_color"
                android:textSize="14sp"
                android:text="一个月" />

            <RadioButton
                android:id="@+id/Three_months_radio"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:button="@drawable/check_pay_type"
                android:paddingLeft="17dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/main_color"
                android:textSize="14sp"
                android:text="一个月"
                 />

            <RadioButton
                android:id="@+id/Six_months_radio"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:button="@drawable/check_pay_type"
                android:paddingLeft="17dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/main_color"
                android:textSize="14sp"
                android:text="一个月" />
            <RadioButton
                android:id="@+id/A_year_radio"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:button="@drawable/check_pay_type"
                android:paddingLeft="17dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/main_color"
                android:textSize="14sp"
                android:text="一个月" />
            <RadioButton
                android:id="@+id/forever_radio"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:button="@drawable/check_pay_type"
                android:paddingLeft="17dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/main_color"
                android:textSize="14sp"
                android:text="一个月" />

        </RadioGroup>
    </FrameLayout>

</RelativeLayout>