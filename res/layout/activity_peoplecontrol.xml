<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/title" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/car_option"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/lock_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/select"
                    android:gravity="left"
                    android:onClick="things"
                    android:paddingBottom="15dip"
                    android:paddingLeft="20dip"
                    android:paddingTop="15dip"
                    android:text="远程设防"
                    android:textSize="18sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:background="#D1EEEE" />

                <Button
                    android:id="@+id/unlock_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/select"
                    android:gravity="left"
                    android:onClick="things"
                    android:paddingBottom="15dip"
                    android:paddingLeft="20dip"
                    android:paddingTop="15dip"
                    android:text="远程撤防"
                    android:textSize="18sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:background="#D1EEEE" />

                <Button
                    android:id="@+id/break_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/select"
                    android:gravity="left"
                    android:onClick="things"
                    android:paddingBottom="15dip"
                    android:paddingLeft="20dip"
                    android:paddingTop="15dip"
                    android:text="远程断油电"
                    android:textSize="18sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:background="#D1EEEE" />

                <Button
                    android:id="@+id/unbreak_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/select"
                    android:gravity="left"
                    android:onClick="things"
                    android:paddingBottom="15dip"
                    android:paddingLeft="20dip"
                    android:paddingTop="15dip"
                    android:text="远程恢复油电"
                    android:textSize="18sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:background="#D1EEEE" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/p_options"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/monitor"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/select"
                    android:gravity="left"
                    android:onClick="things"
                    android:paddingBottom="15dip"
                    android:paddingLeft="20dip"
                    android:paddingTop="15dip"
                    android:text="远程监听"
                    android:textSize="18sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:background="#D1EEEE" />

                <Button
                    android:id="@+id/photo_f"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/select"
                    android:gravity="left"
                    android:onClick="things"
                    android:paddingBottom="15dip"
                    android:paddingLeft="20dip"
                    android:paddingTop="15dip"
                    android:text="远程拍照（前置）"
                    android:textSize="18sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:background="#D1EEEE" />

                <Button
                    android:id="@+id/photo_b"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/select"
                    android:gravity="left"
                    android:onClick="things"
                    android:paddingBottom="15dip"
                    android:paddingLeft="20dip"
                    android:paddingTop="15dip"
                    android:text="远程拍照（后置）"
                    android:textSize="18sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:background="#D1EEEE" />

                <Button
                    android:id="@+id/contactset"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/select"
                    android:gravity="left"
                    android:onClick="things"
                    android:paddingBottom="15dip"
                    android:paddingLeft="20dip"
                    android:paddingTop="15dip"
                    android:text="远程电话本设置"
                    android:textSize="18sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:background="#D1EEEE" />

                <Button
                    android:id="@+id/setsafedist"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/select"
                    android:gravity="left"
                    android:onClick="things"
                    android:paddingBottom="15dip"
                    android:paddingLeft="20dip"
                    android:paddingTop="15dip"
                    android:text="安全距离报警设置"
                    android:textSize="18sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:background="#D1EEEE" />

                <Button
                    android:id="@+id/sethousing"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/select"
                    android:gravity="left"
                    android:onClick="things"
                    android:paddingBottom="15dip"
                    android:paddingLeft="20dip"
                    android:paddingTop="15dip"
                    android:text="离家在家超时报警设置"
                    android:textSize="18sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:background="#D1EEEE" />

                <Button
                    android:id="@+id/set_txinfo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/select"
                    android:gravity="left"
                    android:onClick="things"
                    android:paddingBottom="15dip"
                    android:paddingLeft="20dip"
                    android:paddingTop="15dip"
                    android:text="定时提醒设置"
                    android:textSize="18sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:background="#D1EEEE" />
            </LinearLayout>

            <Button
                android:id="@+id/relocation"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/select"
                android:gravity="left"
                android:onClick="things"
                android:paddingBottom="15dip"
                android:paddingLeft="20dip"
                android:paddingTop="15dip"
                android:text="立即定位"
                android:textSize="18sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2px"
                android:background="#D1EEEE" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topbar"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/back"
            style="@style/button_style"
            android:layout_marginLeft="5dip"
            android:background="@drawable/return_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="远程控制"
            android:textColor="@android:color/white"
            android:textSize="22sp" />
    </RelativeLayout>

</RelativeLayout>