<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/buttom_bar_group"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/layout_top_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        <RelativeLayout
            android:id="@+id/bottom_layout_home"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
             android:gravity="center_horizontal"
          
            android:layout_weight="1" >
            <ImageView
                android:id="@+id/bottom_icon_sales"

                android:layout_width="35dp"
                android:layout_height="35dp"
                
                android:src="@drawable/ic_child_care_white_24dp"
                android:layout_centerHorizontal="true"
                android:padding="1dp"
               
                 />

            <TextView
                android:id="@+id/buttom_sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
               android:layout_marginTop="31dp"
                android:layout_centerHorizontal="true"
               
                android:textStyle="bold"
                android:text="酷酷宝"
                android:textSize="10.0sp"
                android:duplicateParentState="true"  />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bottom_layout_find"
            android:layout_width="wrap_content"
            android:gravity="center_horizontal"
            android:layout_height="50dp"
            android:layout_weight="1">
            <ImageView
                 android:id="@+id/bottom_icon_find"
                 android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_pets_white_24dp"
                android:padding="1dp"/>
                

            <TextView
                android:id="@+id/buttom_find"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginTop="31dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:text="发现"
                android:textSize="10.0sp"
                
                android:layout_centerHorizontal="true"
                android:duplicateParentState="true" />
        </RelativeLayout>

      
        <RelativeLayout
            android:id="@+id/bottom_layout_babydetail"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:layout_weight="1" >
            <ImageView
                android:id="@+id/bottom_icon_babydetail"
                 android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_assignment_ind_white_24dp"
                android:padding="1dp"/>

            <TextView
                android:id="@+id/buttom_babydetail"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginTop="31dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:text="宝贝"
                android:textSize="10.0sp"
                android:duplicateParentState="true"  />
        </RelativeLayout>
         <RelativeLayout
            android:id="@+id/bottom_layout_mycenter"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:layout_weight="1" >
            <ImageView
                android:id="@+id/bottom_icon_mycenter"
                 android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
               
                android:src="@drawable/ic_folder_shared_white_24dp"
                android:padding="1dp"/>

            <TextView
                android:id="@+id/buttom_mycenter"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginTop="31dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:text="个人"
                android:textSize="10.0sp"
                android:duplicateParentState="true"  />
        </RelativeLayout>
    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/buttom_bar_group"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />

</RelativeLayout>